{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@shadcn-components/*": ["./src/components/shadcn-ui/ui/*"],
      "@common-components/*": ["./src/components/common/*"],
      "@core-lib/*": ["./src/lib/core"],
      "@shadcn-lib/*": ["./src/lib/shadcn-ui/*"],
      "@styles/*": ["./src/styles/*"],
      "@/*": [
        "./src/*"
      ]
    }
  }
}
